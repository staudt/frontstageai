{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist-server",
    "rootDir": "server",
    "resolveJsonModule": true,
    "declaration": false,
    "types": ["node"]
  },
  "include": ["server"]
}
